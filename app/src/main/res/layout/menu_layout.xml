    <LinearLayout
        android:id="@+id/switchon_personal"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_small_margin">

        <Switch
            android:id="@+id/switch_personal"
            style="@style/ImageView.GuillotineItem"/>
        <TextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/switch_personal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/switchon_generated"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_small_margin">


        <Switch
            android:id="@+id/switch_generated"
            style="@style/ImageView.GuillotineItem"/>
        <TextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/switch_generated" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/change_person"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_small_margin">


        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_changeper" />
        <TextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/change_person" />
    </LinearLayout>





</LinearLayout>